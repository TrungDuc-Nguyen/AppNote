<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|start"
    android:orientation="vertical"
    tools:context=".PassWord.Login">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start_5dp"
        app:hintEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_et"
            android:hint="Nhập tên đăng nhập"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/margin_start_5dp"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_20sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start_5dp"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:hintEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_et"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/margin_start_5dp"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_20sp" />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cb_rememberpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_start_5dp"
        android:padding="@dimen/margin_start_5dp"
        android:text="Giữ đăng nhập."
        android:textColor="#000000"
        android:textSize="@dimen/textsize_20sp" />

    <Button
        android:id="@+id/btn_pass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_start_5dp"
        android:background="@drawable/custom_et"
        android:padding="@dimen/margin_start_5dp"
        android:text="Đăng nhập" />
</LinearLayout>